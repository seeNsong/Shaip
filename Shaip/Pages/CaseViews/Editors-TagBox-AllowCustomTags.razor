@using Demo.Blazor.Model

<div class="demo-description" id="CustomTags">
    <h2><DemoNavLink Link="TagBox#CustomTags" />TagBox - Custom Tags</h2>
    <p>
        In this demo, the <a class="helplink" target="_blank" href="https://docs.devexpress.com/Blazor/DevExpress.Blazor.DxTagBox-1">TagBox</a> supports custom tags that are not stored in a bound data source
        (the <a class="helplink" target="_blank" href="https://docs.devexpress.com/Blazor/DevExpress.Blazor.Base.DxTagBoxBase-1.AllowCustomTags">AllowCustomTags</a> property is set to <b>true</b>). To create a custom tag, users should type a value in the edit box and press Enter.
    </p>
</div>

<div class="card demo-card">
    <div class="card-body mw-480" style="height: 180px">
        <DxTagBox Data="@Cities"
                    NullText="Select city..."
                    AllowCustomTags="true"
                    @bind-Tags="@Tags"
                    @bind-DropDownVisible="@DropDownVisible"
                   ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto">
        </DxTagBox>
    </div>
</div>

<div class="code-snippet card demo-card-wide">
    <CodeSnippetHeader></CodeSnippetHeader>
    <div class="card-footer text-muted">
        <CodeSnippet_Editor_TagBox_AllowCustomTags></CodeSnippet_Editor_TagBox_AllowCustomTags>
    </div>
</div>

@code {
    IEnumerable<string> Cities = new List<string>() {
        "London",
        "Berlin",
        "Paris",
    };

    IEnumerable<string> Tags { get; set; } = new List<string>() {
        "London",
        "New York"
    };

    bool DropDownVisible { get; set; } = true;
}
